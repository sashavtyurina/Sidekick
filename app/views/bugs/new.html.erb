<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@bug) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.label :application_name %>
      <%= f.text_field :application_name %>

  </br>

      <%= f.submit "Add new bug report", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>